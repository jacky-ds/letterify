{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "palette": [
                {"slug": "ltf-weiss", "color": "#ffffff", "name": "Ltf Wei√ü"},
                { "slug": "ltf-grau-100", "color": "rgb(243 244 246)", "name": "Ltf Grau 100" },
                { "slug": "ltf-grau-200", "color": "rgb(229 231 235)", "name": "Ltf Grau 200" },
                { "slug": "ltf-grau-300", "color": "rgb(209 213 219)", "name": "Ltf Grau 300" },
                { "slug": "ltf-grau-400", "color": "rgb(156 163 175)", "name": "Ltf Grau 400" },
                { "slug": "ltf-grau-500", "color": "rgb(107 114 128)", "name": "Ltf Grau 500" },
                { "slug": "ltf-grau-600", "color": "rgb(75 85 99)", "name": "Ltf Grau 600" },
                { "slug": "ltf-grau-700", "color": "rgb(55 65 81)", "name": "Ltf Grau 700" },
                { "slug": "ltf-grau-800", "color": "rgb(31 41 55)", "name": "Ltf Grau 800" },
                { "slug": "ltf-grau-900", "color": "rgb(17 24 39)", "name": "Ltf Grau 900" },
                { "slug": "ltf-primary", "color": "rgb(239 68 68)", "name": "Ltf Primary" },
                { "slug": "ltf-accent", "color": "rgb(67 56 202)", "name": "Ltf Accent" },
                { "slug": "ltf-success", "color": "rgb(52 211 153)", "name": "Ltf Success" },
                { "slug": "ltf-info", "color": "rgb(96 165 250)", "name": "Ltf Info" },
                { "slug": "ltf-warning", "color": "rgb(251 146 60)", "name": "Ltf Warning" },
                { "slug": "ltf-danger", "color": "rgb(236 72 153)", "name": "Ltf Danger" }
            ],
            "background": true,
            "text": true,
            "link": true,
            "custom": false,
            "duotone": [
                { "slug": "ltf-pink-sunset", "colors": ["#11245e", "#dc6300"], "name": "Ltf Pink Sunset"}
            ],
            "defaultGradients": false,
            "gradients": [
                { "slug": "ltf-sunset", "gradient": "linear-gradient(#F27532, #F7CE68)", "name": "Ltf Sunset"}
            ]
        },
        "blocks": {
            "core/site-title": {
                "color": {
                    "defaultPalette": true,
                    "palette": [
                        { "slug": "ltf-primary", "color": "rgb(239 68 68)", "name": "Ltf Primary" }            
                    ],
                    "gradients": [],
                    "customGradient": false
                }
            },
            "core/heading": {
                "typography": {
                    "fontFamilies": [
                        { "fontFamily": "Pacifico, sans-serif", "slug": "ltf-pacifico", "name": "Ltf Pacifico"}
                    ]
                }
            },
            "core/image": {
                "color": {
                    "duotone": [],
                    "customDuotone": false,
                    "gradients": [],
                    "customGradient": false
                }
            },
            "core/preformatted": {
                "typography": {
                    "fontSizes": [],
                    "customFontSize": false
                }
            }
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "typography": {
            "fontFamilies": [
                { "fontFamily": "Rubik, sans-serif", "slug": "ltf-rubik", "name": "Ltf Rubik"},
                { "fontFamily": "Pacifico, sans-serif", "slug": "ltf-pacifico", "name": "Ltf Pacifico"}
            ],
            "fontSizes": [
                { "slug": "small", "size": "0.7rem", "name": "Small"},
                { "slug": "medium", "size": "1.25rem", "name": "Medium"},
                { "slug": "large", "size": "2.25rem", "name": "Large"},
                { "slug": "x-large", "size": "3rem", "name": "Extra Large"},
                { "slug": "riesig", "size": "3.75rem", "name": "Riesig"}
            ],
            "lineHeight": true,
            "dropCap": true,
            "fontWeight": true,
            "fontStyle": true,
            "letterSpacing": true,
            "textDecoration": true
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "110px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "units": [
                "rem",
                "px",
                "%"
            ],
            "blockGap": true
        }
    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--ltf-grau-800)"
        },
        "blocks": {
            "core/button": {
                "color": {
                    "gradient": "var(--wp--preset--gradient--ltf-sunset)",
                    "text": "var(--wp--preset--color--ltf-grau-800)"
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "2px",
                    "radius": "10px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--ltf-primary)"
                }
            },
            "core/heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font--family--ltf-pacifico)"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font--family--ltf-rubik)",
            "fontSize": "16px",
            "fontStyle": "normal",
            "fontWeight": "normal",
            "lineHeight": "inherit",
            "textDecoration": "none",
            "textTransform": "none"
        },
        "spacing": {
            "margin": {
                "top": "0px",
                "bottom": "0px",
                "right": "0px",
                "left": "0px"
            },
            "padding": {
                "top": "0px",
                "bottom": "0px",
                "right": "0px",
                "left": "0px"
            },
            "blockGap": "4rem"
        }
    },
    "customTemplates": [
        {
            "name": "full-width-page", "title": "Full Width Page", "postTypes": ["page"]
        }
    ]
}